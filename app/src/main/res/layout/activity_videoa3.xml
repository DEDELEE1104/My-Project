<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".videoa3">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="復仇者聯盟系列音樂"
                android:textSize="25dp"
                android:gravity="center"/>
            <WebView
                android:id="@+id/web_music1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </WebView>
            <WebView
                android:id="@+id/web_music2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </WebView>
            <WebView
                android:id="@+id/web_music3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </WebView>
            <WebView
                android:id="@+id/web_music4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </WebView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="鋼鐵人系列音樂"
                android:textSize="25dp"
                android:gravity="center"/>
            <WebView
                android:id="@+id/web_music5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </WebView>
            <WebView
                android:id="@+id/web_music6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </WebView>
            <WebView
                android:id="@+id/web_music7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </WebView>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>